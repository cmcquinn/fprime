{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Reference Application",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Ref/fprime-automatic-native-debug/bin/Linux/Ref",
            "args": [
                "-a",
                "127.0.0.1",
                "-p",
                "50000"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Ref/fprime-automatic-native-debug/bin/Linux",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}